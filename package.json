{
  "name": "node-create-app",
  "version": "1.0.0",
  "description": "Template for creating an app on Node.js",
  "main": "app.js",
  "scripts": {
    "start": "rimraf ./dist && babel -d ./dist ./src -s && node dist/server.js",
    "dev": "nodemon --exec node app.js",
    "test": "mocha --timeout 10000",
    "lint:js": "eslint ./src",
    "lint-staged": "lint-staged"
  },
  "author": "Sergey Anishchenko <sergey@pandajs.ru>",
  "license": "MIT",
  "devDependencies": {
    "babel-register": "^6.23.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "eslint": "^3.17.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-config-prettier": "^1.5.0",
    "eslint-plugin-import": "^2.2.0",
    "lint-staged": "^3.3.1",
    "mocha": "^3.2.0",
    "pre-commit": "^1.2.2",
    "supertest": "^3.0.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "pre-commit": "lint-staged",
  "dependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-preset-env": "^1.2.0",
    "basic-auth-connect": "^1.0.0",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.1",
    "config": "^1.25.1",
    "cors": "^2.8.1",
    "express": "^4.15.2",
    "lodash": "^4.17.4",
    "mongoose": "^4.8.6",
    "morgan": "^1.8.1",
    "rimraf": "^2.6.1",
    "rotating-file-stream": "^1.1.9"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
